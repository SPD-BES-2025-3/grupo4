<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.LoginController"
            prefWidth="400" prefHeight="350">
    
    <VBox alignment="CENTER" spacing="15.0" AnchorPane.topAnchor="40.0" AnchorPane.leftAnchor="40.0" AnchorPane.rightAnchor="40.0">
        
        <Label text="Login do Sistema" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
        
        <TextField fx:id="emailField" promptText="Email" />
        
        <PasswordField fx:id="senhaField" promptText="Senha" />
        
        <Button text="Entrar" onAction="#handleLogin" maxWidth="200" />
        
        <Button text="Cadastrar Cliente" onAction="#abrirTelaCadastro" maxWidth="200" />
    </VBox>

</AnchorPane>
