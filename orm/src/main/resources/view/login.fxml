<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="244.0" prefWidth="300" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.exemplo.hello.controller.LoginController">
    <Label layoutX="20" layoutY="40" text="Email:" />
    <TextField fx:id="emailField" layoutX="100" layoutY="35" prefWidth="160" />
    
    <Label layoutX="20" layoutY="80" text="Senha:" />
    <PasswordField fx:id="senhaField" layoutX="100" layoutY="75" prefWidth="160" />
    
    <Button layoutX="110.0" layoutY="122.0" onAction="#handleLogin" prefWidth="80" text="Entrar" />

    <Label fx:id="mensagemLabel" layoutX="20" layoutY="180" prefWidth="260" style="-fx-text-fill: red;" />
    <Label layoutX="105.0" layoutY="162.0" onMouseClicked="#abrirTelaCadastro" style="-fx-text-fill: blue; -fx-underline: true; cursor: hand;" text="Cadastrar Cliente" />
</AnchorPane>
